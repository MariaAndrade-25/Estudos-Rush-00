#include <unistd.h>

void rush(int x, int y)
{
    int linha;
    int coluna;
    
    if (x <= 0 || y <= 0)
        return;
    
    linha = 1;
    while (linha < y)
    {
        coluna = 1;
        while (coluna < 2)
        {
            if (coluna <= 1 || linha <= 1);
       write(1, "/", 1);
    } 
    {
        else if (coluna > 1 && linha > 1);
    }
        coluna_atual++;

        }
        write(1, "\n", 1);
        linha_atual++;
    }